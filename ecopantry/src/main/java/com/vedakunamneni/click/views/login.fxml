<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.vedakunamneni.click.controllers.LoginController"
           stylesheets="@../styles/ecopantry.css"
           styleClass="login-background">

    <VBox spacing="15" alignment="CENTER" maxWidth="300" styleClass="login-card">
        <Label text="Login to EcoPantry" styleClass="hero-title"/>

        <TextField fx:id="emailField" promptText="Username" styleClass="input-field"/>
        <PasswordField fx:id="passwordField" promptText="Password" styleClass="input-field"/>

        <Button text="Login" onAction="#handleLogin" styleClass="hero-button"/>
        <Label fx:id="errorLabel" styleClass="error-label"/>

        <Hyperlink text="Forgot Password?" onAction="#handleForgotPassword" styleClass="link"/>

    </VBox>
</StackPane>
