<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.vedakunamneni.click.controllers.ShoppingListController"
            stylesheets="@../styles/ecopantry.css"
            styleClass="dashboard-background"
            prefWidth="1280" prefHeight="800">

    <!-- Sidebar -->
    <left>
        <VBox spacing="16" alignment="TOP_CENTER" styleClass="sidebar">
            <padding>
                <Insets top="30" left="15" bottom="30" right="15"/>
            </padding>
            <Label text="ðŸŒ± EcoPantry" styleClass="nav-title"/>
            <Separator />
            <Button text="Dashboard" styleClass="nav-button" onAction="#goToDashboard"/>
            <Button text="Inventory" styleClass="nav-button" onAction="#goToInventory"/>
            <Button text="Recipes" styleClass="nav-button" onAction="#goToRecipes"/>
            <Button text="Shopping List" styleClass="nav-button selected"/>
            <Button text="Scanner" styleClass="nav-button" onAction="#goToScanner"/>
            <Button text="Statistics" styleClass="nav-button" onAction="#goToStatistics"/>
            <Separator />
            <Button text="Logout" onAction="#handleLogout" styleClass="nav-button" />
            <Label text="JAVA FINAL PROJECT" styleClass="footer-label"/>
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <HBox spacing="20">
            <!-- Main shopping list content -->
            <VBox spacing="20" styleClass="main-area dashboard-content" HBox.hgrow="ALWAYS">
                <Label text="My Shopping List" styleClass="page-title"/>
                <Label text="Manage your shopping list items with dropdown actions" styleClass="subtitle"/>
                
                <!-- Actions Bar -->
                <HBox alignment="CENTER_LEFT" spacing="15">
                    <Button onAction="#clearAllShoppingList" styleClass="clear-shopping-list-btn" text="Clear All Items" />
                </HBox>
                
                <!-- Shopping List Container -->
                <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
                    <VBox fx:id="shoppingListContainer" spacing="10">
                        <padding>
                            <Insets top="20" left="15" bottom="20" right="15"/>
                        </padding>
                        <!-- Dynamic shopping list items will be added here -->
                    </VBox>
                </ScrollPane>
            </VBox>
        </HBox>
    </center>
</BorderPane>
