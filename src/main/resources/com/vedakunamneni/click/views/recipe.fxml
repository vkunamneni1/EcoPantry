<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.vedakunamneni.click.controllers.RecipeController"
            stylesheets="@../styles/ecopantry.css"
            prefWidth="1280" prefHeight="800">

    <!-- Sidebar -->
    <left>
        <VBox spacing="16" alignment="TOP_CENTER" styleClass="sidebar">
            <padding>
                <Insets top="30" left="15" bottom="30" right="15"/>
            </padding>
            <Label text="🌱 EcoPantry" styleClass="nav-title"/>
            <Separator />
            <Button text="Dashboard" styleClass="nav-button" onAction="#goToDashboard"/>
            <Button text="Inventory" styleClass="nav-button" onAction="#goToInventory"/>
            <Button text="Recipes" styleClass="nav-button selected"/>
            <Button text="Shopping List" styleClass="nav-button" onAction="#goToShoppingList"/>
            <Button text="Scanner" styleClass="nav-button" onAction="#goToScanner"/>
            <Button text="Statistics" styleClass="nav-button" onAction="#goToStatistics"/>
            <Separator />
            <Button text="Logout" onAction="#handleLogout" styleClass="nav-button"/>
            <Label text="© 2025 EcoPantry" styleClass="footer-label"/>
        </VBox>
    </left>

    <!-- Main Recipe Content -->
    <center>
        <HBox spacing="20">
            <!-- Main content area -->
            <ScrollPane fitToWidth="true" styleClass="content-area" HBox.hgrow="ALWAYS">
                <VBox fx:id="recipeBox" spacing="20" styleClass="recipe-container">
                    <!-- Content will be dynamically loaded -->
                </VBox>
            </ScrollPane>
            
            <!-- Shopping List Sidebar -->
            <VBox spacing="15" styleClass="shopping-list-sidebar" prefWidth="280" maxWidth="280">
                <padding>
                    <Insets top="20" left="20" bottom="20" right="20" />
                </padding>
                
                <Label styleClass="shopping-list-title" text="🛒 Shopping List" />
                
                <ScrollPane fitToWidth="true" styleClass="shopping-list-scroll" VBox.vgrow="ALWAYS">
                    <VBox fx:id="shoppingListContainer" spacing="8">
                        <padding>
                            <Insets top="10" left="5" bottom="10" right="5" />
                        </padding>
                        <!-- Shopping list items will be added dynamically -->
                    </VBox>
                </ScrollPane>
                
                <Button text="🗑️ Clear List" styleClass="clear-shopping-list-btn" onAction="#clearShoppingList"/>
            </VBox>
        </HBox>
    </center>
</BorderPane>