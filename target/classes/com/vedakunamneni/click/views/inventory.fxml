<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.vedakunamneni.click.controllers.InventoryController"
            stylesheets="@../styles/ecopantry.css"
            styleClass="dashboard-background"
            prefWidth="1280" prefHeight="800">

    <!-- Sidebar -->
    <left>
        <VBox spacing="16" alignment="TOP_CENTER" styleClass="sidebar">
            <padding>
                <Insets top="30" left="15" bottom="30" right="15"/>
            </padding>
            <Label text="ðŸŒ± EcoPantry" styleClass="nav-title"/>
            <Separator />
            <Button text="Dashboard" styleClass="nav-button" onAction="#goToDashboard"/>
            <Button text="Inventory" styleClass="nav-button selected"/>
            <Button text="Recipes" styleClass="nav-button" onAction="#goToRecipes"/>
            <Button text="Shopping List" styleClass="nav-button" onAction="#goToShoppingList"/>
            <Button text="Scanner" styleClass="nav-button" onAction="#goToScanner"/>
            <Button text="Statistics" styleClass="nav-button" onAction="#goToStatistics"/>
            <Separator />
            <Button text="Logout" onAction="#handleLogout" styleClass="nav-button" />
        </VBox>
    </left>

    <!-- Inventory List -->
    <center>
        <HBox spacing="20">
            <!-- Main inventory content -->
            <VBox spacing="20" styleClass="main-area dashboard-content" HBox.hgrow="ALWAYS">
                <Label text="My Pantry Inventory" styleClass="page-title"/>
                <ScrollPane fitToWidth="true">
                    <VBox fx:id="inventoryContainer" spacing="10">
                        <padding>
                            <Insets top="30" left="15" bottom="30" right="15"/>
                        </padding>
                        <!-- Dynamic inventory items will be added here -->
                    </VBox>
                </ScrollPane>
                
                <!-- Clear All Button -->
                <HBox alignment="BOTTOM_RIGHT" spacing="10">
                    <padding>
                        <Insets top="10" left="15" bottom="30" right="30"/>
                    </padding>
                    <Button fx:id="clearAllInventoryButton" text="ðŸ—‘ï¸ Clear All Items" styleClass="clear-all-btn" onAction="#handleClearAllInventory"/>
                </HBox>
            </VBox>
            
            <!-- Shopping List Sidebar -->
            <VBox spacing="15" styleClass="shopping-list-sidebar" prefWidth="280" maxWidth="280">
                <padding>
                    <Insets top="20" left="20" bottom="20" right="20" />
                </padding>
                
                <Label styleClass="shopping-list-title" text="ðŸ›’ Shopping List" />
                
                <ScrollPane fitToWidth="true" styleClass="shopping-list-scroll" VBox.vgrow="ALWAYS">
                    <VBox fx:id="shoppingListContainer" spacing="8">
                        <padding>
                            <Insets top="10" left="5" bottom="10" right="5" />
                        </padding>
                        <!-- Shopping list items will be added dynamically -->
                    </VBox>
                </ScrollPane>
                
                <Button text="ðŸ—‘ï¸ Clear List" styleClass="clear-shopping-list-btn" onAction="#clearShoppingList"/>
            </VBox>
        </HBox>
    </center>
</BorderPane>
