<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.vedakunamneni.click.controllers.FavoritesController"
            stylesheets="@../styles/ecopantry.css"
            prefWidth="1280" prefHeight="800">

    <!-- Sidebar -->
    <left>
        <VBox spacing="16" alignment="TOP_CENTER" styleClass="sidebar">
            <padding>
                <Insets top="30" left="15" bottom="30" right="15"/>
            </padding>
            <Label text="🌱 EcoPantry" styleClass="nav-title"/>
            <Separator />
            <Button text="Dashboard" styleClass="nav-button" onAction="#goToDashboard"/>
            <Button text="Inventory" styleClass="nav-button" onAction="#goToInventory"/>
            <Button text="Recipes" styleClass="nav-button" onAction="#goToRecipes"/>
            <Button text="Scanner" styleClass="nav-button" onAction="#goToScanner"/>
            <Button text="Statistics" styleClass="nav-button" onAction="#goToStatistics"/>
            <Separator />
            <Button text="Shopping List" styleClass="nav-button" onAction="#goToShoppingList"/>
            <Button text="Favorites" styleClass="nav-button selected" onAction="#goToFavorites"/>
            <Separator />
            <Button text="Logout" onAction="#handleLogout" styleClass="nav-button"/>
            <Label text="© 2025 EcoPantry" styleClass="footer-label"/>
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <ScrollPane fitToWidth="true" styleClass="content-area">
            <VBox spacing="30" styleClass="container">
                <!-- Header -->
                <VBox spacing="15">
                    <Label text="⭐ Favorite Recipes" styleClass="page-title"/>
                    <Label text="Your collection of favorite recipes" styleClass="page-subtitle"/>
                    
                    <!-- Action Buttons -->
                    <HBox spacing="15">
                        <Button fx:id="clearFavoritesButton" text="🗑️ Clear All Favorites" onAction="#clearFavorites" 
                                style="-fx-font-size: 12px; -fx-background-color: #f44336; -fx-text-fill: white; -fx-padding: 8 15; -fx-background-radius: 5;"/>
                    </HBox>
                </VBox>
                
                <!-- Favorites Content -->
                <VBox fx:id="favoritesContainer" spacing="20">
                    <!-- Favorite recipe cards will be added here dynamically -->
                </VBox>
                
                <!-- Empty State -->
                <VBox fx:id="emptyStateContainer" spacing="20" alignment="CENTER" 
                      style="-fx-padding: 50; -fx-alignment: center;" visible="false">
                    <Label text="💝 No favorite recipes yet" 
                           style="-fx-font-size: 18px; -fx-text-fill: #666; -fx-font-weight: bold;"/>
                    <Label text="Browse recipes and click the favorite button to add them here!" 
                           style="-fx-font-size: 14px; -fx-text-fill: #999;"/>
                    <Button text="Browse Recipes" onAction="#goToRecipes" 
                            style="-fx-font-size: 14px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 5;"/>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
