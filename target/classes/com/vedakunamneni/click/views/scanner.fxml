<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.vedakunamneni.click.controllers.ScannerController"
            stylesheets="@../styles/ecopantry.css"
            prefWidth="1280" prefHeight="800">

    <!-- Sidebar -->
    <left>
        <VBox spacing="16" alignment="TOP_CENTER" styleClass="sidebar">
            <padding>
                <Insets top="30" left="15" bottom="30" right="15"/>
            </padding>
            <Label text="ðŸŒ± EcoPantry" styleClass="nav-title"/>
            <Separator />
            <Button text="Dashboard" styleClass="nav-button" onAction="#goToDashboard"/>
            <Button text="Inventory" styleClass="nav-button" onAction="#goToInventory"/>
            <Button text="Recipes" styleClass="nav-button" onAction="#goToRecipes"/>
            <Button text="Shopping List" styleClass="nav-button" onAction="#goToShoppingList"/>
            <Button text="Scanner" styleClass="nav-button selected"/>
            <Button text="Statistics" styleClass="nav-button" onAction="#goToStatistics"/>
            <Separator />
            <Button text="Logout" onAction="#handleLogout" styleClass="nav-button"/>
            <Label text="Â© 2025 EcoPantry" styleClass="footer-label"/>
        </VBox>
    </left>

    <!-- Main Scanner Content -->
    <center>
        <VBox alignment="CENTER" spacing="30" styleClass="scanner-container">
            <Label text="Upload a Receipt" styleClass="page-title"/>
            <VBox fx:id="dropZone" styleClass="drop-zone" alignment="CENTER">
                <Label text="Drag and Drop a file here or click to upload" styleClass="drop-text"/>
            </VBox>
            
            <!-- Ingredients Section -->
            <VBox fx:id="ingredientsSection" spacing="15" visible="false" managed="false">
                <Label text="Detected Ingredients:" styleClass="section-title"/>
                <ScrollPane prefHeight="300" fitToWidth="true">
                    <VBox fx:id="ingredientsBox" spacing="10"/>
                </ScrollPane>
                <HBox spacing="15" alignment="CENTER">
                    <Button fx:id="addSelectedButton" text="Add Selected to Inventory" styleClass="action-button" onAction="#addSelectedToInventory"/>
                    <Button text="Select All" styleClass="secondary-button" onAction="#selectAllIngredients"/>
                    <Button text="Clear All" styleClass="secondary-button" onAction="#clearAllIngredients"/>
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>
