<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.vedakunamneni.click.controllers.ShoppingListController"
            stylesheets="@../styles/ecopantry.css"
            prefWidth="1280" prefHeight="800">

    <!-- Sidebar -->
    <left>
        <VBox spacing="16" alignment="TOP_CENTER" styleClass="sidebar">
            <padding>
                <Insets top="30" left="15" bottom="30" right="15"/>
            </padding>
            <Label text="🌱 EcoPantry" styleClass="nav-title"/>
            <Separator />
            <Button text="Dashboard" styleClass="nav-button" onAction="#goToDashboard"/>
            <Button text="Inventory" styleClass="nav-button" onAction="#goToInventory"/>
            <Button text="Recipes" styleClass="nav-button" onAction="#goToRecipes"/>
            <Button text="Scanner" styleClass="nav-button" onAction="#goToScanner"/>
            <Button text="Statistics" styleClass="nav-button" onAction="#goToStatistics"/>
            <Separator />
            <Button text="Shopping List" styleClass="nav-button selected" onAction="#goToShoppingList"/>
            <Button text="Favorites" styleClass="nav-button" onAction="#goToFavorites"/>
            <Separator />
            <Button text="Logout" onAction="#handleLogout" styleClass="nav-button"/>
            <Label text="© 2025 EcoPantry" styleClass="footer-label"/>
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <ScrollPane fitToWidth="true" styleClass="content-area">
            <VBox spacing="30" styleClass="container">
                <!-- Header -->
                <VBox spacing="15">
                    <Label text="🛒 Shopping List" styleClass="page-title"/>
                    <Label text="Ingredients you need for your favorite recipes" styleClass="page-subtitle"/>
                    
                    <!-- Action Buttons -->
                    <HBox spacing="15">
                        <Button fx:id="clearListButton" text="🗑️ Clear All" onAction="#clearShoppingList" 
                                style="-fx-font-size: 12px; -fx-background-color: #f44336; -fx-text-fill: white; -fx-padding: 8 15; -fx-background-radius: 5;"/>
                        <Button fx:id="markAllPurchasedButton" text="✓ Mark All Purchased" onAction="#markAllPurchased" 
                                style="-fx-font-size: 12px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 8 15; -fx-background-radius: 5;"/>
                    </HBox>
                </VBox>
                
                <!-- Shopping List Content -->
                <VBox fx:id="shoppingListContainer" spacing="10" 
                      style="-fx-background-color: #f8f9fa; -fx-padding: 20; -fx-background-radius: 10; -fx-border-color: #dee2e6; -fx-border-radius: 10;">
                    <!-- Shopping list items will be added here dynamically -->
                </VBox>
                
                <!-- Empty State -->
                <VBox fx:id="emptyStateContainer" spacing="20" alignment="CENTER" 
                      style="-fx-padding: 50; -fx-alignment: center;" visible="false">
                    <Label text="📝 Your shopping list is empty" 
                           style="-fx-font-size: 18px; -fx-text-fill: #666; -fx-font-weight: bold;"/>
                    <Label text="Add missing ingredients from recipe details to build your shopping list!" 
                           style="-fx-font-size: 14px; -fx-text-fill: #999;"/>
                    <Button text="Browse Recipes" onAction="#goToRecipes" 
                            style="-fx-font-size: 14px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 5;"/>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
